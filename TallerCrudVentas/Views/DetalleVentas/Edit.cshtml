@model TallerCrudVentas.Models.DetalleVenta

@{
    ViewData["Title"] = "Editar venta";
}

<style>
    h1 {
        text-align: center;
        margin-top: 50px;
        margin-bottom: 30px;
    }

    .formEdit{
        display: flex;
        justify-content: center;
    }

    .control-label{
        font-weight: bold;
        text-transform: uppercase;
    }

    .form-group{
        margin-bottom: 20px;
    }

    .form-control {
        font-weight: 500;
    }
    
</style>

<!-- Editar venta  -->
<h1>Editar venta</h1>
<hr />

<!-- Formulario para editar venta -->
<div class="row formEdit">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DetalleVentaId" />
            <div class="form-group">
                <label asp-for="VentaId" class="control-label"></label>
                <select asp-for="VentaId" class="form-control" asp-items="ViewBag.VentaId"></select>
                <span asp-validation-for="VentaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductoId" class="control-label"></label>
                <select asp-for="ProductoId" class="form-control" asp-items="ViewBag.ProductoId"></select>
                <span asp-validation-for="ProductoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubTotal" class="control-label"></label>
                <input asp-for="SubTotal" class="form-control" />
                <span asp-validation-for="SubTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <button type="button" class="btn btn-dark">
                    <a asp-action="Index" style="color: white; text-decoration: none;">Cancelar</a>
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
